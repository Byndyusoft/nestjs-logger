{
  "name": "nestjs-logger",
  "version": "1.0.0",
  "description": "Logger module for NestJS based on Pino logger",
  "main": "index.ts",
  "scripts": {
    "_test:cov": "jest --coverage",
    "prebuild": "shx rm -rf ./dist",
    "build": "tsc --project ./tsconfig.build.json",
    "postinstall": "husky install && ts-patch install",
    "lint": "yarn run lint:eslint && yarn run lint:markdown && yarn run lint:prettier",
    "lint:eslint": "eslint --ignore-path ./.gitignore --max-warnings 0 --ext .ts,.js .",
    "lint:eslint:fix": "eslint --ignore-path ./.gitignore --fix --ext .ts,.js .",
    "lint:fix": "yarn run lint:eslint:fix && yarn run lint:markdown:fix && yarn run lint:prettier:fix",
    "lint:markdown": "markdownlint --ignore-path ./.gitignore \"./**/*.md\"",
    "lint:markdown:fix": "markdownlint --ignore-path ./.gitignore --fix \"./**/*.md\"",
    "lint:prettier": "prettier --ignore-path ./.gitignore --check \"./**/*.{ts,js,json,yaml,yml,md}\"",
    "lint:prettier:fix": "prettier --ignore-path ./.gitignore --write \"./**/*.{ts,js,json,yaml,yml,md}\"",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Byndyusoft/nestjs-logger.git"
  },
  "keywords": [
    "nestjs",
    "logger",
    "pinologger",
    "byndyusoft"
  ],
  "author": "Byndyusoft",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Byndyusoft/nestjs-logger/issues"
  },
  "homepage": "https://github.com/Byndyusoft/nestjs-logger#readme",
  "devDependencies": {
    "@byndyusoft/eslint-config": "2.1.1",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "eslint": "^8.25.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "markdownlint-cli": "0.32.2",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.2.18",
    "ts-patch": "^2.0.1"
  },
  "dependencies": {
    "@byndyusoft/nest-dynamic-module": "^1.0.0",
    "@byndyusoft/pino-logger-factory": "^3.0.0",
    "@byndyusoft/tsconfig": "^1.2.0",
    "@nestjs/common": "^9.1.4",
    "nestjs-pino": "^3.1.1",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@4.0.0-rc.15"
}
